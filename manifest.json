{
  "name": "Wolt - Restaurant Availability Alarm",
  "description": "Let you know when the restaurant is want to order from is online!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "activeTab", "webNavigation"],
  "host_permissions": ["https://wolt.com/*", "http://wolt.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://wolt.com/*", "http://wolt.com/*"],
      "js": ["content_script.js"]
    }
  ]
}
